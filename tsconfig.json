{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2018",
        "lib": ["dom", "es2018"],
        "jsx": "react",
        "typeRoots": ["src/types", "./node_modules/@types"],
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "baseUrl": "src/ts",
        "paths": {
            "~": ["/*"]
        }
    },
    "include": [
        "./src/ts/**/*",
        "./src/admints/**/*"
    ]
}
